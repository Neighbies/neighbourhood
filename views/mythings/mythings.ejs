

<div class="container-edit-my-things-mobile edit-my-things-box">
    <% if (things.length === 0) { %>
        <p>You don't have any things yet</p>
    <% } %>
    <div class="mx-2 mt-4 flex-box-edit-things-buttons">
        <form  class="flex-box-form-mythings" action="/mythings/add" action="POST">
            <button type="submit" class="btn btn-default plus-button button-edit-my-things"><i class="fa fa-plus-circle" aria-hidden="true"></i></button>
        </form>

        <a href="/" class="go-home-button mt-2  button-go-back-home-edit-mythings">
            <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
            Go Home
        </a>
    </div>


    <div class="mt-5 mx-2">
        <% things.forEach(thing => { %>
            <div class="card my-5 d-inline-flex mobile-card-mythings" style="width:17rem;">
                <img class="thing-img card-img-top" src="<%= thing.pic_path %>" alt="">
                <div class="card-block  p-4">
                    <h4 class="card-title card-title-mobile"><%= thing.title %></h4>
                    <p class="card-text card-text-mobile-localization"><strong>Location:</strong> <%= thing.localitzation %></p>
                    <p class="card-text card-text-mobile-price"><strong>Price:</strong> <%= thing.price %></p>
                    <div class="ml-auto">
                        <a href="/mythings/edit/<%= thing.id %>" class="btn btn-primary d-inline">Edit</a>
                        <form action="/mythings/delete/<%= thing.id %>" class=" d-inline" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>


</div>


 


