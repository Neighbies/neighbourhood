<% if (userPic !== undefined) { %>
    <a href="/profile"><img src="<%=userPic.path%>/<%=userPic.name%>" alt=""></a>
    <a href="/logout">Logout</a>
    <a href="/mythings">My things</a>
 <% } else { %>
    <a href="/signup">Sign up</a>
    <a href="/login">Log in</a>    
 <% } %>

<div>
    <img src="<%= thing.pic_path %>/<%= thing.pic_name %>" alt="">
</div>
<div>
    <ul>
        <li>
            <%=thing.title%>
        </li>
        <li>
            <%=user.username%>
        </li>
        <li>
            <%=thing.localitzation%>
        </li>
        <li>
            <%=thing.price%>
        </li>
    </ul>
</div>
<div>
    <p>
        <%=thing.description%>
    </p>
</div>

<div>
    <h2>Contact me</h2>

    <% if (!loggedIn) { %>
        <a href="/login">
            <button>Log in to contact</button>
        </a>
        <% } else { %>
            <p>
                <%=user.email%>
            </p>
            <p>
                <%=user.telephone%>
            </p>
            <button>Message me</button>
            <% } %>
</div>